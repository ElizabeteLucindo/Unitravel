<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_corner"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/placeImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bico_do_papagaio"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/placeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Title"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço: Rua Exemplo, 123"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/placeCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custo: 0 R$"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/placeTopics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tópicos: Fotos, família, passeio"
            android:textColor="#555555"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>