<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/aviao"
        android:layout_width="284dp"
        android:layout_height="260dp"
        app:srcCompat="@drawable/aviao1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/viga"
        android:text="UNITRAVEL"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/aviao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/usuario"
        android:layout_width="231dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_white"
        android:drawableLeft="@drawable/icon_username_menor"
        android:drawablePadding="38dp"
        android:paddingStart="14dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="@color/cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="231dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittext_white"
        android:drawableLeft="@drawable/icon_lock"
        android:drawablePadding="38dp"
        android:paddingStart="14dp"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usuario" />

    <Button
        android:id="@+id/buttonCadastro"
        android:layout_width="231dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/azul_claro"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:icon="@drawable/seta"
        app:iconSize="20dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/senha" />

    <TextView
        android:id="@+id/esqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Esqueceu a senha?"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/buttonCadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cadastrar"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/esqueceuSenha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
